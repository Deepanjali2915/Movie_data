const LikeDislikeCounter = () => {
    const [count, setCount] = useState(0);

    const handleLike = () => {
        setCount(count + 1);
    };

    const handleDislike = () => {
        setCount(count - 1);
    };
 };



const [count,setCount] = useState(0);

    const handleLike = () => {
        setCount(count+1);
        onLike();
    };
    
    
    
    const [count,setCount]=useState(0);
    
    const handleDislike =()=>{
        setCount(count+1);
        onDislike();
    }; 





